<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>لوحة تحكم النادي</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-light">
    <div class="container-fluid">
        <div class="row">
            <!-- المحتوى الرئيسي -->
            <div class="col-12 col-md-12 p-4">

                <!-- لوحة تحكم النادي -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h2 class="card-title fw-bold">لوحة تحكم النادي</h2>
                            <div class="btn-group">
                                <!-- زر تعديل معلومات النادي -->
                                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editClubModal">
                                    <i class="fas fa-edit ms-2"></i> تعديل معلومات النادي
                                </button>
                                <!-- زر تعيين مشرف جديد -->
                                <button class="btn btn-secondary">
                                    <i class="fas fa-user-plus ms-2"></i> تعيين مشرف جديد
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- إدارة الفعاليات -->
                <div class="card shadow-sm">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h2 class="card-title fw-bold">إدارة الفعاليات</h2>
                            <!-- زر إنشاء فعالية جديدة -->
                            <button class="btn btn-success">
                                <i class="fas fa-plus-circle ms-2"></i> إنشاء فعالية جديدة
                            </button>
                        </div>

                        <!-- الجدول -->
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered text-center align-middle">
                                <thead class="table-dark">
                                    <tr>
                                        <th>اسم الفعالية</th>
                                        <th>التاريخ</th>
                                        <th>المسجلون</th>
                                        <th>الحالة</th>
                                        <th>إجراءات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- تكرار البيانات من خلال EJS -->
                                    <% events.forEach(event => { %>
                                    <tr>
                                        <td><%= event.name %></td>
                                        <td><%= event.date %></td>
                                        <td><%= event.registered %> / <%= event.capacity %></td>
                                        <td>
                                            <% if (event.status === 'open') { %>
                                                <span class="badge bg-success">مفتوح</span>
                                            <% } else { %>
                                                <span class="badge bg-danger">منتهي</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <!-- زر تعديل -->
                                            <button class="btn btn-primary btn-sm">
                                                <i class="fas fa-edit"></i> تعديل
                                            </button>
                                            <!-- زر عرض المشاركين -->
                                            <button class="btn btn-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#participantsModal">
                                                عرض المشاركين
                                            </button>
                                        </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- نافذة تعديل معلومات النادي -->
    <div class="modal fade" id="editClubModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">تعديل معلومات النادي</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="editClubForm">
                        <div class="mb-3">
                            <!-- اسم النادي -->
                            <label for="clubName" class="form-label">اسم النادي</label>
                            <input type="text" class="form-control" id="clubName" placeholder="أدخل اسم النادي" value="<%= club.name %>">
                        </div>
                        <div class="mb-3">
                            <!-- وصف النادي -->
                            <label for="clubDescription" class="form-label">وصف النادي</label>
                            <textarea class="form-control" id="clubDescription" rows="3" placeholder="أدخل وصف النادي"><%= club.description %></textarea>
                        </div>
                        <div class="mb-3">
                            <!-- اسم المشرف -->
                            <label for="clubSupervisor" class="form-label">اسم المشرف</label>
                            <input type="text" class="form-control" id="clubSupervisor" placeholder="أدخل اسم المشرف" value="<%= club.supervisor %>">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إغلاق</button>
                    <button type="submit" class="btn btn-primary" onclick="saveClubInfo()">حفظ التعديلات</button>
                </div>
            </div>
        </div>
    </div>

    <!-- فصل الجافاسكريبت إلى ملف منفصل -->
    <script src="/js/club-dashboard.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
