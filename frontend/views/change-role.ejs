<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Change Role</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css"
      rel="stylesheet"
    />

    <!-- Custom CSS -->
    <link href="/css/delete-account.css" rel="stylesheet" />
    <link href="/css/partials/header.css" rel="stylesheet" />
    <link href="/css/partials/footer.css" rel="stylesheet" />
    <link href="/css/partials/background.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
      rel="stylesheet"
    />
  </head>

  <body class="background">
    <%- include('partials/header',{ currentPage: 'change-role' }) %>
    <br />
    <div class="container main-container">
      <div class="delete-container">
        <form action="/change-role" method="POST" class="d-flex flex-column align-items-center justify-content-center">
          <div class="col-md-6 col-sm-8 col-10">
            <div class="d-flex flex-column align-items-center">
              <select name="role" required class="form-select mb-4 text-center" style="width: 200px;">
                <option value="">Select Role</option>
                <% ['Admin', 'ClubAdmin', 'Member', 'Visitor'].forEach(role => { %>
                <option value="<%= role %>"><%= role %></option>
                <% }) %>
              </select>
              <button class="btn btn-danger" type="submit" style="width: 100px;">
                Change Role
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <%- include('partials/footer') %>
  </body>
</html>
