<div class="container py-5 mt-5"> <!-- Add mt-5 for margin-top -->
    <!-- Page Header -->
    <header class="text-center mb-5">
        <h1 class="display-4 fw-bold">إنشاء نادي جديد</h1>
    </header>

    <!-- Error Message -->
    <% if (locals.error) { %>
        <div class="alert alert-danger mb-4" role="alert">
            <%= error %>
        </div>
    <% } %>

    <!-- Create Club Form -->
    <div class="card shadow-sm">
        <div class="card-body">
            <form action="/clubs/create" method="POST">
                <!-- Club Name -->
                <div class="mb-3">
                    <label for="name" class="form-label">اسم النادي:</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>

                <!-- Club Description -->
                <div class="mb-3">
                    <label for="description" class="form-label">الوصف:</label>
                    <textarea class="form-control" id="description" name="description" rows="4" required></textarea>
                </div>

                <!-- Club Logo URL -->
                <div class="mb-3">
                    <label for="logo" class="form-label">شعار النادي (URL):</label>
                    <input type="url" class="form-control" id="logo" name="logo" required>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary w-100">إنشاء</button>
            </form>
        </div>
    </div>
</div>