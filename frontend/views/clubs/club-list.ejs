<div class="container py-5 mt-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold text-gradient mb-3">
            <i class="fas fa-users me-2"></i>
            <br>
            الأندية
        </h1>
        <p class="lead text-secondary">اكتشف الأندية وشارك في تجارب مميزة</p>
    </div>

    <% if (user && user.role === 'Admin') { %>
        <div class="text-center mb-4">
            <a href="/clubs/create" class="btn btn-primary btn-lg">إنشاء نادي جديد</a>
        </div>
    <% } %>

    <div class="row g-4">
        <% if (clubs.length > 0) { %>
            <% clubs.forEach(club => { %>
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm hover-card">
                        <div class="position-relative">
                            <img src="<%= club.logo %>"
                                 onerror="this.onerror=null;this.src='https://medcenterhealth.org/wp-content/uploads/mch-event-placeholder@2x-1640x923.png';"
                                 class="card-img-top object-fit-cover"
                                 style="height: 220px;"
                                 alt="<%= club.name %>">
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary mb-3 fw-bold">
                                <%= club.name %>
                            </h5>

                            <p class="card-text text-secondary mb-4 flex-grow-1">
                                <%= club.description.substring(0, 100) %>...
                            </p>

                            <p class="text-muted">المشرف: <%= club.clubAdmin.displayName %></p>

                            <a href="/clubs/<%= club.uuid %>" class="btn btn-primary w-100 details-btn">
                                <i class="fas fa-arrow-circle-right me-2"></i>
                                عرض التفاصيل
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12 text-center py-5">
                <div class="empty-state rounded-4 p-5">
                    <i class="fas fa-users-slash fa-4x text-secondary mb-4"></i>
                    <h3 class="fw-bold mb-3">لا توجد أندية متاحة حالياً</h3>
                    <p class="text-secondary mb-4">سجل بريدك الإلكتروني ليصلك تنبيه عند إضافة أندية جديدة</p>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="/clubs" class="btn btn-primary px-4">
                            <i class="fas fa-sync-alt me-2"></i>
                            تحديث الصفحة
                        </a>
                        <a href="/contact" class="btn btn-outline-primary px-4">
                            <i class="fas fa-envelope me-2"></i>
                            تواصل معنا
                        </a>
                    </div>
                </div>
            </div>
        <% } %>
    </div>
</div>

<style>
    .text-gradient {
        background: linear-gradient(45deg, #4A90E2, #003366);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    .details-btn {
        background: linear-gradient(45deg, #4A90E2, #003366);
        border-color: transparent;
    }
</style>