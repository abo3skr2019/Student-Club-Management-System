<div class="container py-5 mt-5">
    <header class="text-center mb-5">
        <h1 class="display-4 fw-bold">تعديل النادي - <%= club.name %></h1>
    </header>

    <% if (locals.error) { %>
        <div class="alert alert-danger mb-4" role="alert">
            <%= error %>
        </div>
    <% } %>

    <div class="card shadow-sm">
        <div class="card-body">
            <form action="/clubs/<%= club.uuid %>/edit" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">اسم النادي:</label>
                    <input type="text" class="form-control" id="name" name="name" value="<%= club.name %>" required>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">الوصف:</label>
                    <textarea class="form-control" id="description" name="description" rows="4" required><%= club.description %></textarea>
                </div>
                <div class="mb-3">
                    <label for="logo" class="form-label">شعار النادي (URL):</label>
                    <input type="url" class="form-control" id="logo" name="logo" value="<%= club.logo %>" required>
                </div>
                <button type="submit" class="btn btn-primary w-100">حفظ التغييرات</button>
            </form>
        </div>
    </div>
</div>