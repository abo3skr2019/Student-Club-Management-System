<!DOCTYPE html><html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'وصل' %></title>
    <!-- Bootstrap RTL CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <!-- Custom CSS -->
    <link href="/css/partials/footer.css" rel="stylesheet">
    <link href="/css/partials/background.css" rel="stylesheet">
    <%- typeof HeaderOrSidebar !== 'undefined' && HeaderOrSidebar === 'sidebar' ? '<link href="/css/partials/sidebar.css" rel="stylesheet">' : '<link href="/css/partials/header.css" rel="stylesheet">' %>
    <%- typeof extraCSS !== 'undefined' ? extraCSS : '' %>
    <style>
        body, html {
            overflow-x: hidden;
            height: 100%;
        }
        .layout-wrapper {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        .main-content {
            flex-grow: 1;
        }
        .footer {
            margin-right: 0;
        }
    </style>
</head>
<body>
<div class="layout-wrapper">
    <%- include(typeof HeaderOrSidebar !== 'undefined' && HeaderOrSidebar === 'sidebar' ? '../partials/sidebar' : '../partials/header', { currentPage: currentPage }) %>
    <div class="main-content">
        <%- body %>
    </div>
    <%- include('../partials/footer') %>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<%- typeof extraScripts !== 'undefined' ? extraScripts : '' %>
</body>
</html>